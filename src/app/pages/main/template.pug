                        mixin="sphere trigger debug" visible="false"
                        __sound="src: #audio-trigger2; volume: 50; on: click;"
                    )
                        a-entity.particles(mixin="trigger-particles" gpu-particle-system="spawnEnabled: false;")
                    a-text(position="-4 5 0" scale="12 12 12" value="CONTINUE" color="#fff" shader="flat")
            
        a-entity#layer2(visible="false")
            //- a-entity.particle-snow(position="400 25 0" gpu-particle-system="spawnEnabled: false; preset: snow; maxParticles: 6000; spawnRate: 1000; lifetime: 6; size: 1.2; positionSpread: 0 50 30; velocity: -100 -10 0; texture: #tex-particle-1;")
            
