                a-image#img2-1(position="114 14 -163" look-at="#playerBox" height="20" image-init="" src="#tex-text-4" opacity="0")
                a-image#img2-2(position="208 7 -104" look-at="#playerBox" height="12" image-init="" src="#tex-text-5" opacity="0")
