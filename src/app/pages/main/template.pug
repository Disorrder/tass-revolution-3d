                    __material="shader: flat; color: #000;" __common-material
                    gen-train="wagonMap: passanger,passanger,passanger,generic,platform,platform,platform,tanker,tanker,tanker,tanker,passanger,passanger,passanger"
                    __sound="src: #audio-sfx-1; volume: 90; loop: false; on: run;"
