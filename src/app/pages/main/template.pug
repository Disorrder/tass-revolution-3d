                a-image#img2-4(position="211 4 45" look-at="#playerBox" height="10" image-init="" src="#tex-text-7" opacity="0")
                a-image#img2-5(position="316 51 -40" look-at="#playerBox" rotation="0 -90 0" height="50" image-init="" src="#tex-text-8" opacity="0")
                

        a-entity#layer3-idle(visible="false")
            a-entity.items
                a-entity.trigger-group(position="175 3 175")
                    a-entity#trigger3.interactive(
                        mixin="sphere trigger debug" visible="false"
                        __sound="src: #audio-click; volume: 50; on: click;"
                    )
