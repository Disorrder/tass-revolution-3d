        a-entity#layer1-post
            a-entity.weather.particle-snow(position="0 0 0" gpu-particle-system="preset: snow; maxParticles: 500; spawnRate: 50; texture: #tex-particle-1;")

        a-entity#layer2-post
            a-entity.particle-snow(position="500 -20 0" gpu-particle-system="spawnEnabled: false; preset: snow; maxParticles: 5000; spawnRate: 500; lifetime: 10; size: 1.2; positionSpread: 0 30 100; velocity: -100 -0.1 0; texture: #tex-particle-1;")


