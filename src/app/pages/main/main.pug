extends ../../../index.pug

block scene
    a-assets
        img#boxTexture(crossorigin src="https://i.imgur.com/mYmmbrp.jpg")
        img#skyTexture(crossorigin src="https://cdn.aframe.io/360-image-gallery-boilerplate/img/city.jpg")
        //- img#skyTexture(crossorigin src="https://cdn.aframe.io/360-image-gallery-boilerplate/img/sechelt.jpg")
        img#groundTexture(crossorigin src="https://cdn.aframe.io/a-painter/images/floor.jpg")
        img#photo1(src="/assets/photos/TASS_170984.jpg")
        //- img#photo1(src="/assets/photos/TASS_186313.jpg")
        img#photo2(crossorigin src="https://pbs.twimg.com/profile_images/1481569385/y_902e2a9f_400x400.jpg")

    a-sky(color="#000")
    a-light(type="ambient" color="#445451")
    a-light(type="point" position="2 4 4" intensity="0.2")
    a-terrain(position="0 -0.01 0" width="80" height="80" _src="#groundTexture" color="#555" wireframe="false" _shader="flat" shadow="recieve: true; cast: true;")

    a-entity#bg1(position="-25 0 0")
        //- a-light(type="point" position="-8 1.6 -13.3" intensity="1" penumbra="0.5" distance="100" decay="2"
        //-     light="castShadow: true"
        //-     geometry="primitive: sphere; radius: 0.5"
        //- )
        a-entity(
            position="-8 1.6 -13.3"
            light="type: point; castShadow: true;"
        )
        a-sphere(color='#555' position='0 -3.02 17.43' scale='4 5.78 15' shadow="cast: true; receive: true")
        a-sphere(color='#555' position='-4.76 -2.25 0' scale='4 5.96 13' shadow="cast: true; receive: true")
        a-sphere(color='#555' position='0 -3.47 -16.74' scale='4 6 15' shadow="cast: true; receive: true")

    a-entity#trains(position="-7 0 -33" rotation="0 10 0")
        //- a-entity.train(ng-repeat="train in page.trains" position="{{train.position}}")
            a-box.wagon(ng-repeat="wagon in train.wagons" position="{{wagon.position}}" width="3" height="1.2")

    a-text(value="Revolution 3D" font="mozillavr" color="#BBB" position="-0.9 0.24 -3" rotation="-45 0 0" scale="1.5 1.5 1.5")

    a-entity(position="0 0 0" particle-system="preset: snow; particleCount: 5000; velocityValue: 1 4 1")
    a-entity#photos(position="0 0 -3")

block ui
    div ololo
