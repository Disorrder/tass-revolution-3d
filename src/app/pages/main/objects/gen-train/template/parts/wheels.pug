    a-cylinder.wheel-7(position=`${-x2} 0 -0.8` rotation="90 0 0" height=0.1 radius=0.5 material=material)
    a-cylinder.wheel-8(position=`${-x1} 0 -0.8` rotation="90 0 0" height=0.1 radius=0.5 material=material)
